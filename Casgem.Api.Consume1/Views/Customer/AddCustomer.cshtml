@model Casgem.Api.Consume1.Dtos.CustomerDtos.CreateCustomerDto
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Müşteri Ekleme Sayfası</h1>

<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" class="form-control border" style="background-color:darkslategray" asp-for="Name" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control border" style="background-color:darkslategray" asp-for="City" />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>